<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Pepper" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/red_light</item>
        <item name="colorPrimaryVariant">@color/red_darker</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/red</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

        <item name="android:fontFamily">@font/roboto_slab_regular</item>
    </style>


    <!--    bottom_menu-->
    <style name="BottomNavigationView" parent="@style/TextAppearance.AppCompat.Caption">
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">@android:color/darker_gray</item>
    </style>

    <style name="BottomNavigationView.Active" parent="@style/TextAppearance.AppCompat.Caption">
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="tabText" parent="@android:style/TextAppearance.Widget.TabWidget">
        <item name="android:fontFamily">@font/roboto_slab_regular</item>
        <item name="android:textSize">16sp</item>
        <item name="textAllCaps">false</item>

    </style>

    <style name="ButtonBack">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:src">@drawable/ic_back_24</item>
        <item name="android:background">?selectableItemBackgroundBorderless</item>
        <item name="android:padding">10dp</item>
        <item name="android:layout_marginStart">6dp</item>
        <item name="android:layout_marginTop">6dp</item>
    </style>

    <style name="TextInputLayout" parent="TextGray">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:textColorHint">@color/gray</item>
        <item name="boxBackgroundColor">@color/red_light</item>
        <item name="boxStrokeColor">@color/red</item>
        <item name="hintTextColor">@color/gray</item>
    </style>

    <style name="TextLabel" parent="TextAppearance.Design.Hint">
        <item name="android:textSize">10sp</item>
    </style>

    <style name="EditTextInputLayout" >
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">start</item>
        <item name="android:paddingStart">0dp</item>
        <item name="android:paddingEnd">0dp</item>
        <item name="android:lines">1</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextGray">
        <item name="android:textColor">@color/gray</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
    </style>

